{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pseudo-ifts",
	"patterns": [
		{"include": "#keywords"},
		{"include": "#strings"}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pseudo-ifts",
				"match": "(?:\\b(INICIO|FIN|LEER|ESCRIBIR|SI|SINO|ENTONCES|FINSI||CON CADA PASO|HACER|DESDE|HASTA|PARA|FINPARA|MIENTRAS|FINMIENTRAS|ALGORITMO|FINALGORITMO)\\b)"
			},
			{
				"name": "keyword.operator.comparison.pseudo-ifts",
				"match": "\\b(==|=|!=|<|>|<=|>=|**|AND|OR|Y|O)\\b"
			}]
		},		
		"strings": {
			"name": "string.quoted.double.pseudo-ifts",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pseudo-ifts",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.algo"
}