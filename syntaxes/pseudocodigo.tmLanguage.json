{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pseudo-ifts",
	"patterns": [
		{"include": "#keywords"},
		{"include": "#strings"},
		{"include": "#string"},
		{"include": "#numbers"}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "//.*$"
				},
				{
					"name": "comment.block",
					"begin": "\\/\\*",
					"end": "\\*\\/"
				},
				{
					"name": "keyword.control",
					"match": "\\b(INICIO|FIN|LEER|ESCRIBIR|ALGORITMO|FINALGORITMO)\\b"
				},
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				},
				{
					"name": "keyword.operator.comparison",
					"match": "\\b(==|=|!=|<|>|<=|>=|**|AND|OR|Y|O)\\b"
				},
				{
					"name": "storage.type",
					"match": "\\b(SI|SINO|ENTONCES|FINSI|CON CADA PASO|HACER|DESDE|HASTA|PARA|FINPARA|MIENTRAS|FINMIENTRAS|REPETIR)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"string": {
			"name": "string.quoted.single",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.integer",
					"match": "\\b[0-9]+(?![0-9]*\\.)\\b"
				},
				{
					"name": "constant.numeric.float",
					"match": "\\b[0-9]+\\.[0-9]+\\b"
				}
			]
		}
	},
	"scopeName": "source.algo"
}